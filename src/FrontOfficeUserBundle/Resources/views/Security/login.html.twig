{% extends 'FrontOfficeHomepageBundle::layout.html.twig' %}

	{% block content %}

		<div class="container" style="margin-left:75px">
			<div class="well col-lg-6">

				<h3 style="text-align:center;">Connectez-vous :</h3>

				{% if error %}
		    		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				<form action="{{ path("fos_user_security_check") }}" method="post">
				    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

				    <label for="username">{{ 'username'|trans }}</label>
				    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" /><br><br>

				    <label for="password">{{ 'password'|trans }}</label>
				    <input type="password" id="password" name="_password" required="required" /><br><br>

				    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
				    <label for="remember_me">{{ 'Se souvenir de moi'|trans }}</label><br><br>

				    <input type="submit" id="_submit" name="_submit" value="{{ 'Valider'|trans }}" style="margin-left:220px;" />
				</form>

			</div>
		</div>

	{% endblock %}