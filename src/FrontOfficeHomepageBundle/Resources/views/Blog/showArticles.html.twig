{% extends 'FrontOfficeHomepageBundle::layout.html.twig' %}

    {% block content %}

    <!-- Page Content -->
        <div class="container" style="background-color:white;">

            <div class="row">

                <!-- Blog Entries Column -->
                <div class="col-md-8">

                    <h1 class="page-header">
                        Bienvenue sur le blog de Jobinfo !
                        <small>Toute l'actu du marché de l'emploi :</small>
                    </h1>

                    <!-- First Blog Post -->
                    {% for article in showArticles %}
                        <h2>
                            <a href="#">{{ article.title }}</a>
                        </h2>
                        <p class="lead">
                            by <a href="index.php"> {{ article.author.username }}</a>
                        </p>
                        <p><span class="glyphicon glyphicon-time"></span> Posté le {{ article.dateCreated | date('d-m-Y H:i:s') }}</p>
                        <hr>
                        <img class="img-responsive" src="../img/{{ article.image }}.jpg" alt="image-developpeurs" style="width:750px;">
                        <hr>
                        <p>{{ article.content }}</p>
                        <a class="btn btn-primary" <a href="{{ path('front_office_homepage_blog_oneArticle',{id:article.id}) }}" class="btn btn-default btn-lg">Read More <span class="glyphicon glyphicon-chevron-right"></span></a>

                        <hr>
                    {% endfor %}

                    <!-- Pager -->
                    <ul class="pager">
                        <li class="previous">
                            <a href="#">&larr; Older</a>
                        </li>
                        <li class="next">
                            <a href="#">Newer &rarr;</a>
                        </li>
                    </ul>

                </div>

                <!-- Blog Sidebar Widgets Column -->
                <div class="col-md-4">

                    <!-- Blog Search Well -->
                    <div class="well">
                        <h4>Blog Search</h4>
                        <div class="input-group">
                            <input type="text" class="form-control">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button">
                                    <span class="glyphicon glyphicon-search"></span>
                            </button>
                            </span>
                        </div>
                        <!-- /.input-group -->
                    </div>

                    <!-- Blog Categories Well -->
                    <div class="well">
                        <h4>Blog Categories</h4>
                        <div class="row">
                            <div class="col-lg-6">
                                <ul class="list-unstyled">
