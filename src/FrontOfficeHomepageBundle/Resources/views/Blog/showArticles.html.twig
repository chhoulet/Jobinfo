{% extends 'FrontOfficeHomepageBundle::layout.html.twig' %}

    {% block content %}

 <div class="container">

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">JobInfo
                        <strong>blog</strong>
                    </h2>
                    <hr>
                </div>

                {% for article in showArticles %}
                    <div class="col-lg-12 text-center" >
                        <img class="img-responsive img-border img-full" src="img/slide-1.jpg" alt="">
                        <h2>{{ article.title }}
                            <br>
                            <small>{{ article.subject }} <br>
                                {{ article.dateCreated | date('d-m-Y H:i:s') }}</small>
                        </h2>
                        <p style="text-align:justify">{{ article.content }}</p>
                        <a href="{{ path('front_office_homepage_blog_oneArticle',{id:article.id}) }}" class="btn btn-default btn-lg">Read More</a>
                        <hr>
                    </div>
                {% endfor %}


                <div class="col-lg-12 text-center">
                    <ul class="pager">
                        <li class="previous"><a href="#">&larr; Older</a>
                        </li>
                        <li class="next"><a href="#">Newer &rarr;</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container -->
{% endblock %}