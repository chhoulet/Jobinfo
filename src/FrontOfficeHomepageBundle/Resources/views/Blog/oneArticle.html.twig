{% extends 'FrontOfficeHomepageBundle::layout.html.twig' %}
    {%  use('FrontOfficeHomepageBundle:Slots:sidebar.html.twig') %}

	{% block content %}

    <!-- Page Content -->
    <div class="container" style="background-color:white;">

        <div class="row">

            <!-- Blog Post Content Column -->
            <div class="col-lg-8">

                {% for message in app.session.flashbag.get('succes') %}
                    {{ message }}
                {% endfor %}

                <!-- Blog Post -->

                <!-- Title -->
                <h1>{{ oneArticle.title }}</h1>

                <!-- Author -->
                <p class="lead">
                    Thème : {{ oneArticle.subject }}</a>
                </p>

                <hr>

                <!-- Date/Time -->
                <p><span class="glyphicon glyphicon-time"></span>Posté le : {{ oneArticle.dateCreated | date('d-m-Y H:i:s') }}</p>

                <hr>

                <!-- Preview Image -->
                <img class="img-responsive" src="../../img/{{ oneArticle.image }}.jpg" alt="image-developpeurs" style ="width:750px;">

                <hr>

                <!-- Post Content -->
                <p class="lead">{{ oneArticle.content }}</p>

                <hr>

                <!-- Blog Comments -->

                <!-- Comments Form -->
                <div class="well">
                    <h4>Postez un commentaire :</h4>
                       
                            <div class="form-group">                                
                              {{ form(form) }}
                            </div>
                       
                </div>

                <hr>

                <!-- Posted Comments -->

                <!-- Comment -->
                {% if oneArticle.comment == true %}
                    {% for com in oneArticle.comment %}
                        <div class="media">                                              
                            <div class="media-body">
                                <h4 class="media-heading"> {{ com.author }}
                                    <small>{{ com.dateCreated |date('d-m-Y H:i:s')}}</small>
                                </h4>
                               {{ com.message}}
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <p>Soyez le premier à poster un commentaire !</p>
                {% endif %}

            </div>

            <div class="col-md-4">

                        <!-- Blog Search Well -->
                        <div class="well">
                            <h4>Blog Search</h4>
                                <div class="input-group">
                                    <input type="text" class="form-control">
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" type="button">
                                            <span class="glyphicon glyphicon-search"></span>
                                    </button>
                                    </span>
                                </div>
                            <!-- /.input-group -->
                        </div>

                        <!-- Blog Categories Well -->
                        <div class="well">
                            <h4>Blog Categories</h4>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <ul class="list-unstyled">
                                            {% for categorie in listCategory %}
                                                <li><a href="{{ path('front_office_homepage_blog_triArticle',{category:categorie.name}) }}">{{categorie.name}}</a>
                                                </li>                                           
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                                    <!-- /.col-lg-6 -->                                                   
                            <!-- /.row -->
                        </div>
                    </div>
           {#  {{ include('FrontOfficeHomepageBundle:Slots:sidebar.html.twig') }} #}
        
        </div>
        <!-- /.row -->        

        {% endblock %}