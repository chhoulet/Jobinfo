{% extends 'FrontOfficeHomepageBundle::layout.html.twig' %}

	{% block content %}

		    <div class="row">
                <div class="box">
                    <div class="col-lg-12">

                        <hr>

                        <div style="background-color:white;text-align:center;margin:auto;padding:40px;font-size:20px;">
                            {% for message in app.session.flashbag.get('succes') %}
                                {{ message }}
                                <hr>
                            {% endfor %}

                            {% for messa in app.session.flashbag.get('notice') %}                
                                {{ messa }}               
                                <hr>
                            {% endfor %}
                        </div>

                        <h2 class="intro-text text-center">
                            <strong>{{ oneForum.forumName }} :</strong>
                        </h2>

                        <hr>

                        <p><h3>{{ oneForum.forumDate | date('d-m-Y') }}</h3></p><br>
                        <p><h4>{{ oneForum.forumType }}</h4></p><br>
                        <p>{{ oneForum.forumDescription }}</p><br>
                        <p>{{ oneForum.forumAdress }}</p><br><br>

                        {% if (is_granted('ROLE_USER')) %}

                            {% for user in oneForum.inscrits %}
                                {% if app.user.id == user.id %}
                                    <p><strong>Vous êtes déjà inscrit à ce forum !</strong></p>
                                {% endif %}
                            {% endfor %}

                            <a href="{{ path('front_office_forum_inscription',{id:oneForum.id}) }}"><button class="btn btn-primary">Inscrivez-vous à ce forum</button></a>

                        {% else %}                        

                            <a href="{{ path('fos_user_security_login') }}"><button class="btn btn-primary">Connectez-vous pour vous inscrire !</button></a>

                        {% endif %}
                        
                    </div>
                </div>
            </div>

{# Affichage des jointures selon le type de forum sélectionné : #}
            {% if (oneForum.forumType == 'FORMATION') %}

                {% for formation in oneForum.formation %}
                    <div class="row">
                        <div class="box">
                            <div class="col-lg-12">
                                <hr>
                                <h2 class="intro-text text-center">Liste des formations proposées :
                                    <strong>{{ formation.formationName }} :</strong>
                                </h2>
                                <hr>
                                <p>{{ formation.formationDescription }}</p><br>
                            </div>
                        </div>
                    </div>
                {% endfor %}

            {% else %}

                {% for emploi in oneForum.society %}
                    <div class="row">
                        <div class="box">
                            <div class="col-lg-12">
                                <hr>
                                <h2 class="intro-text text-center">Liste des sociétés participantes :
                                    <strong>{{ emploi.name }} :</strong>
                                </h2>
                                <hr>
                                <p>{{ emploi.activity }}</p><br>
                                <p>{{ emploi.description }}</p><br>
                            </div>
                        </div>
                    </div>
                {% endfor %}

            {% endif %}

	{% endblock %}