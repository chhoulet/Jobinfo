{% extends 'FrontOfficeHomepageBundle::layout.html.twig' %}

	{% block content %}

		

    		 <div class="row">
                <div class="box">
                    <div class="col-lg-12">
                        <hr>                        
                            {% for messa in app.session.flashbag.get('notice') %}                         
                                <div class="flash">{{ messa }}</div>                           
                                <hr>
                            {% endfor %}  

                            {% for forum in forums %}                     
                                <h2 class="intro-text text-center">
                                    <strong><a href="{{ path('front_office_forum_oneForum',{id:forum.id}) }}">{{forum.forumName}}</a></strong>
                                </h2>
                                <hr>
                                <strong>Date:</strong> {{ forum.forumDate | date('d-m-Y')}}<br>
                                <strong>Description:</strong> {{ forum.forumDescription}}
                                <hr>
                            {% endfor %}                                                                  
                    </div>
                </div>
            </div>

    	

	{% endblock %}