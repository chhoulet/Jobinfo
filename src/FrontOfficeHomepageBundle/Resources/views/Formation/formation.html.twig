{% extends 'FrontOfficeHomepageBundle::layout.html.twig' %}

	{% block content %}

        <div class="row" style="background-color:white;margin-left:45px;margin-right:45px;">
		  
            <h2>Liste des formations disponibles : </h2>
                
    		    {% for format in formation %}

                    <div class="box">
                        <div class="col-lg-12">
                            <hr>
                            <h2 class="intro-text text-center">
                                <strong>{{format.formationName}}</strong>
                            </h2>
                            <hr>
                            <p>Date de création : {{format.createdAt | date('d-m-Y H:i:s') }}</p>
                            <p>{{ format.formationDescription}}</p>
                        </div><br>

                        <a href="{{ path('front_office_formation_showOne',{formationType: format.formationType, id:format.id})}}"><button>Détails :</button></a><br>
                                             
                            {% if (is_granted('ROLE_USER')) %} 

                                {% for user in format.inscrits %}

                                    {% if app.user.id == user.id %}
                                        <p style="text-align:center;"><strong>Vous êtes déjà inscrit à cette formation !</strong></p>
                                    {% else %}
                                        <a href="{{ path('front_office_formation_inscription',{id:oneFormation.id})}}"><button>Inscrivez-vous à cette formation :</button></a>                                                 
                                    {% endif %}

                                {% endfor %}                                

                            {% else %}

                                <h4>Vous souhaitez vous inscrire à cette formation ?</h4>
                                <a href="{{ path('fos_user_security_login')}}"><button>Connectez-vous !</button></a>
                                    
                            {% endif %}                                                  
                        
                    </div>
                
        	   {% endfor %}

        </div>

	{% endblock %}
    