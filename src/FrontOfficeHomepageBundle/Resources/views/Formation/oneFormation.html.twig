{% extends 'FrontOfficeHomepageBundle::layout.html.twig' %}

	{% block content %}

    		<div class="row" style="background-color:white;margin-left:45px;margin-right:45px;">

                    <div class="box">
                        <div class="col-lg-12">
                            <hr>
                            <h2 class="intro-text text-center">
                                <strong>{{oneFormation.formationName}}</strong>
                            </h2>
                            <hr>
                            <p>Date de création : {{ oneFormation.createdAt | date('d-m-Y H:i:s') }}</p>
                            <p>{{ oneFormation.formationDescription }}</p>
                        </div>                                            

                                {% if (is_granted('ROLE_USER')) %}

                                    {% for user in oneFormation.inscrits %}
                                        {% if app.user.id == user.id %}

                                            <p style="margin-left:40px;"><strong>Vous êtes inscrit à cette formation !</strong></p> 

                                        {% else %}
                                            
                                            <a href="{{ path('front_office_formation_inscription',{id:oneFormation.id})}}"><button>Inscrivez-vous à cette formation :</button></a>                                            
                                                                                            
                                        {% endif %}                                         
                                    {% endfor %}  
                                                                        
                                {% else %}

                                    <h4>Vous souhaitez vous inscrire à cette formation ?</h4><br>
                                    <a href="{{ path('fos_user_security_login')}}"><button>Connectez-vous !</button></a>
                                    <h4>Pas encore de compte utilisateur ? <a href="{{ path('fos_user_register_registration') }}"><button>Je créé mon compte</button></a>

                                {% endif %}

                           
                       
                    </div>
                    
            </div>

	{% endblock %}