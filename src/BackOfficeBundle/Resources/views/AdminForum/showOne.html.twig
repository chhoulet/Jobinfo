{% extends 'BackOfficeBundle::layout.html.twig' %}

    {% block content %}

    		
    		<div class="row">
                <div class="box">
                    <div class="col-lg-12">
                        <hr>
                        <h2 class="intro-text text-center"><strong>{{ showOne.forumName }}</strong><br>
                            {{showOne.forumType}}
                        </h2>
                        <hr>
                            <p>Date : {{showOne.forumDate | date('d-m-Y H:i:s') }}</p><br>
                            <p style="text-align:justify;">{{ showOne.forumDescription }}</p><br>
                            <p style="text-align:justify;">{{ showOne.forumAdress }}</p><br><br>

                        {% if (showOne.society == true) %}
                            <div class="col-lg-8" style="text-align:justify;">
                                <h3>Liste des sociétés participantes :</h3>
                                    {% for society in showOne.society %}
                                        <p style="text-align:justify;">{{ society.name }}</p><br>
                                        <p style="text-align:justify;">{{ society.activity }}</p><br>
                                        <p style="text-align:justify;">{{ society.description }}</p><br>
                                    {% endfor %}
                            </div><br>
                        {% endif %}

                        {% if (showOne.formation == true) %}
                            <div class="col-lg-8" style="text-align:justify;">
                                <h3>Formations présentées :</h3>
                                    {# {% for formation in showOne.formation %}
                                        <p style="text-align:justify;">{{ formation.formationName }}</p><br>
                                        <p style="text-align:justify;">{{ formation.organism }}</p><br>
                                        <p style="text-align:justify;">{{ formation.formationDescription }}</p><br>
                                    {% endfor %} #}
                            </div><br>
                        {% endif %}
                    </div>

                    <a href="{{ path('back_office_adminforum_edit',{id:showOne.id}) }}"><button>Edition :</button></a>
                    <a href="{{ path('back_office_adminforum_delete',{id:showOne.id}) }}"><button>Supprimer cet élément</button></a>
                </div>
            </div>
        	

	{% endblock %}