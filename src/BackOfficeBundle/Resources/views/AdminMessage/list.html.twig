{% extends 'BackOfficeBundle::layout.html.twig' %}

    {% block content %}

 <div class="container">

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">Messages re√ßus :
                        <strong></strong>
                    </h2>
                    <hr>
                </div>

                {% for mess in messages %}
                    <div class="col-lg-12 text-center" >
                        <img class="img-responsive img-border img-full" src="img/slide-1.jpg" alt="">
                        <h2>
                            <br>
                            <small>{{ mess.subject }} <br>
                                {{ mess.dateCreated | date('d-m-Y H:i:s') }} par {{ mess.author }} </small>
                        </h2>
                        <p style="text-align:justify">{{ mess.content }}</p>
                        <a href="{{ path('back_office_adminarticles_edit',{id:mess.id}) }}" class="btn btn-default btn-lg">Read More</a><br>
                        <a href="{{ path('back_office_admin_readMessage',{id:mess.id}) }}">Marquer ce message comme lu</a>
                        <hr>
                    </div>
                {% endfor %}


                <div class="col-lg-12 text-center">
                    <ul class="pager">
                        <li class="previous"><a href="#">&larr; Older</a>
                        </li>
                        <li class="next"><a href="#">Newer &rarr;</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container -->
{% endblock %}