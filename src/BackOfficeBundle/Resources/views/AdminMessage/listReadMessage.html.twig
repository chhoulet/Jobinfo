{% extends 'BackOfficeBundle::layout.html.twig' %}

    {% block content %}

 <div class="container">

        <div id="top" class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">Messages archiv√©s
                        <strong></strong>
                    </h2>
                    <hr>
                </div>

                {% for message in app.session.flashbag.get('succes') %}
                    {{ message }}
                {% endfor %}

                {% for mess in readmessages %}
                    <div class="col-lg-12 text-center" >
                        <img class="img-responsive img-border img-full" src="img/slide-1.jpg" alt="">
                        <h2>
                            <br>
                            <small>{{ mess.subject }} <br>
                                {{ mess.dateCreated | date('d-m-Y H:i:s') }} par {{ mess.author }} </small>
                        </h2>
                        <p style="text-align:justify">{{ mess.content }}</p><br>
                         <a href="{{ path('back_office_admin_message_delete',{id:mess.id}) }}" class="btn btn-default btn-lg">Supprimer ce message</a><br>                                
                        <hr>
                    </div>
                {% endfor %}

                <hr>

                 <a href="#top"><button>Retour en haut de page</button></a>
                
            </div>
        </div>

    </div>
    <!-- /.container -->
{% endblock %}