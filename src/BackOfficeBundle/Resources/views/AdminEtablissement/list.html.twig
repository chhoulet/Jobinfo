{% extends 'BackOfficeBundle::layout.html.twig' %}

    {% block content %}

		<h2 id="top"> Liste des établissements de formation : </h2>

            {% for eta in app.session.flashbag.get('newet') %}
                {{ eta }}
            {% endfor %}

            {% for message in app.session.flashbag.get('succes') %}
                {{ message }}
            {% endfor %}

    		{% for eta in list %}
        		<div class="row">
                    <div class="box">
                        <div class="col-lg-12">
                            <hr>
                            <h2 class="intro-text text-center">{{ eta.etablissementName }}<br>
                                <strong>{{ eta.etablissementAdress }}</strong><br>  {{ eta.etablissementPhone }}<br>
                            </h2>
                            <hr>
                            <a href="{{ path('back_office_adminEtablissement_delete',{id:eta.id})}}"><button>Supprimer cet établissement</button></a>
                        </div>
                    </div>
                </div>
        	{% endfor %}

            <hr>

            <a href="#top"><button>Retour en haut de page</button></a>

	{% endblock %}

