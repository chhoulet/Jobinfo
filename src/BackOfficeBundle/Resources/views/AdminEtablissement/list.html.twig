{% extends 'BackOfficeBundle::layout.html.twig' %}

    {% block content %}

		<h2> Liste des établissements de formation : </h2>

    		{% for eta in list %}
        		<div class="row">
                    <div class="box">
                        <div class="col-lg-12">
                            <hr>
                            <h2 class="intro-text text-center">{{ eta.etablissementName }}
                                <strong>{{ eta.etablissementAdress }}</strong>  {{ eta.etablissementPhone }}
                            </h2>
                            <hr>
                            <a href="{{ path('back_office_adminEtablissement_delete',{id:eta.id})}}"><button>Supprimer cet établissement</button></a>
                        </div>
                    </div>
                </div>
        	{% endfor %}

	{% endblock %}

