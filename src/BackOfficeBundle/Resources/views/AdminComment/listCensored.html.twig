{% extends 'BackOfficeBundle::layout.html.twig' %}

    {% block content %}

         <div class="container">

                <div class="row">
                    <div class="box">
                        <div class="col-lg-12">
                            <hr>
                            <h2 class="intro-text text-center">JobInfo
                                <strong>blog</strong>
                            </h2>
                            <hr>
                            
                        </div>

                        <h2 id="top">Auteurs par nombre de commentaires censurés</h2>
                            <TABLE BORDER="2" > 
                                <CAPTION><strong> Commentaires censurés:</strong></CAPTION> 
                                    <TR> 
                                         <TH> Auteur : </TH> 
                                         <TH> Nb comments </TH> 
                                         <TH> Date création </TH> 
                                         <TH> Date de censure </TH> 
                                    </TR> 
                                    {% for com in nbCensoredByAuthor %}
                                        <TR> 
                                             <TD> {{ com.username }} </TD> 
                                             <TD> {{ com.nb }} </TD> 
                                             <TD> {{ com.dateCreated | date('d-m-Y H:i:s') }}</TD> 
                                             <TD> {{ com.dateCensored | date('d-m-Y H:i:s')}} </TD> 
                                        </TR> 
                                    {% endfor %}
                            </TABLE> 

                        <h2>Commentaires censurés</h2>

                            {% for com in listCensored %}
                                <div class="col-lg-12 text-center" >
                                
                                    <h3>{{ com.author }}
                                        <br>                                        
                                            Posté le: {{ com.dateCreated | date('d-m-Y H:i:s') }} 
                                            Censuré le: {{ com.dateCensored | date('d-m-Y H:i:s')}}
                                    </h3>
                                    <p style="text-align:justify">{{ com.message }}</p>
                                    
                                    <hr>
                                    
                                    <a href="{{ path('back_office_admincomments_delete',{id:com.id}) }}">Supprimer ce commentaire</a>
                                </div>

                                <hr>

                            {% endfor %}

                            
                            <a href="#top"><button style="margin-left:500px;">Retour en haut de page</button></a>
                        
                    </div>
                </div>

         </div>
    <!-- /.container -->
{% endblock %}