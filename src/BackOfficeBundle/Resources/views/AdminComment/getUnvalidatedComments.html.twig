{% extends 'BackOfficeBundle::layout.html.twig' %}

    {% block content %}

         <div class="container">

                <div class="row">
                    <div class="box">
                        <div class="col-lg-12">
                            <hr>
                            <h2 class="intro-text text-center">JobInfo
                                <strong>blog</strong>
                            </h2>
                            <hr>

                            {% for message in app.session.flashbag.get('succes') %}
                                {{ message }}
                            {% endfor %}

                            {% for messa in app.session.flashbag.get('notice') %}
                                {{ messa }}
                            {% endfor %}

                            {% for mess in app.session.flashbag.get('cens') %}
                                {{ mess }}
                            {% endfor %}

                        </div>

                        {% for com in commentUnvalidated %}
                            <div class="col-lg-12 text-center" >
                                <img class="img-responsive img-border img-full" src="img/slide-1.jpg" alt="">

                                <h2>{{ com.author }}
                                    <br>
                                    
                                        {{ com.dateCreated | date('d-m-Y H:i:s') }} 
                                </h2>
                                <p style="text-align:justify">{{ com.message }}</p>
                                
                                <hr>

                                <a href="{{ path('back_office_admincomments_validation',{id:com.id}) }}">Valider ce commentaire</a><br>
                                <a href="{{ path('back_office_admincomments_censor',{id:com.id}) }}">Censurer ce commentaire</a><br>
                                <a href="{{ path('back_office_admincomments_delete',{id:com.id}) }}">Supprimer ce commentaire</a>
                            </div>
                        {% endfor %}
                        
                    </div>
                </div>

         </div>
    <!-- /.container -->
{% endblock %}