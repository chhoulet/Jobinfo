{% extends 'BackOfficeBundle::layout.html.twig' %}

    {% block content %}

		<h2> Liste des formations disponibles : </h2>

    		{% for forma in showFormation %}
    		<div class="row">
                <div class="box">
                    <div class="col-lg-12">
                        <hr>
                        <h2 class="intro-text text-center">
                            <strong>{{forma.formationName}}</strong>
                        </h2>
                        <hr>
                        <p>Date de création : {{forma.createdAt | date('d-m-Y H:i:s') }}</p>
                        <p>{{ forma.formationDescription}}</p>
                    </div>
                    <a href="{{ path('back_office_adminformation_edit',{id:forma.id}) }}"><button>Détails :</button></a>
                </div>
            </div>
        	{% endfor %}

	{% endblock %}