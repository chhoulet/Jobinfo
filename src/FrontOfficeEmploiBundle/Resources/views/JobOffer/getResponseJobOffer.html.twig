{% extends 'FrontOfficeHomepageBundle::layout.html.twig' %}

	{% block content %}

{# Recuperation de l'objet response à l'aide d'une boucle, pour afficher tous les CV et les LM des candidats #}
		{% for response in getResponseJobOffer %}

			<h3>Détail de la candidature :</h3>

				{{ response.content }}<br><br>
				{{ response.dateCreated | date('d-m-Y') }}<br><br>

					{% for cuv in response.cuvitae %}
						{% if cuv.gradeOne %}				
								<strong>Diplome 1:</strong> {{ cuv.gradeOne }}<br>
							{% endif %}
							{% if cuv.gradeTwo %}
								<strong>Diplome 2:</strong> {{ cuv.gradeTwo }}<br>
							{% endif %}
							{% if cuv.languages %}
								<strong>Langues:</strong> {{ cuv.languages }}<br>
							{% endif %}
							{% if cuv.workExperience1 %}
								<strong>Expérience professionnelle 1:</strong> {{ cuv.workExperience1 }}<br>
							{% endif %}
							{% if cuv.workExperience2 %}
								<strong>Expérience professionnelle 2:</strong> {{ cuv.workExperience2 }}<br>
							{% endif %}
							Languages et compétences informatiques: {{ cuv.skills }}<br>
							{% if cuv.dateUpdated %}
								<p><strong>Dernière mise à jour le :</strong> {{ cuv.dateUpdated | date('d-m-Y') }}<br><br>
						{% else %}
								<br>
						{% endif %}

						<hr>
						
					{% endfor %}

					{% for lem in motivationLetter %}
						<strong>Intitulé:</strong>{{ lem.subject }}<br>
						<strong>Message:</strong>{{ lem.content }}

						<hr>
					{% endfor %}

		{% endfor %}

	{% endblock %}